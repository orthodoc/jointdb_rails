<h2><%= @product.name %></h2>
<p>Company: <%= link_to @product.company.name, @product.company %></p>
<br />
<% if user_signed_in? %>
    <%= link_to "New Product", new_product_path %> | 
    <%= link_to "Edit Product", edit_product_path(@product) %> | 
  <% if current_user.has_role? :admin %>
    <%= link_to "Delete Product", @product, :method => :delete, :confirm => "Are you sure you want to delete this product?" %> |
  <% end %>
<% end %>
  <%= link_to "Home", root_path %>
