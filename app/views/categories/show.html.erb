<h2><%= @category.name %></h2>
<%= form_tag category_path, method: :get do %>
  <p>
    <%= text_field_tag :query, params[:query] %>
    <%= submit_tag "Search", name: nil %>
  </p>
<% end %>
<p>
  <% if @companies.count == 0 %>
    <% company_not_found_alert %>
  <% elsif @companies.count == 1 %>
    One entry found!!
  <% else %>
    <%= @companies.count %> entries found!
  <% end %>
</p>
<ul>
  <% @companies.each do |company| %>
    <li><%= link_to company.name, company %></li>
  <% end %>
</ul>
<%= will_paginate @companies %>
<br />
<%= link_to "Edit Category", edit_category_path(@category) %> |
<%= link_to "Delete Category", @category, :method => :delete, :confirm => "Are you sure you want to delete this category and its companies?" %> |
<%= link_to "Home", root_path %>
